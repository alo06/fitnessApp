<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="394dp"
            android:layout_height="87dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/alata"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="15dp"

            android:textSize="26dp" />

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="146dp"
            android:layout_height="58dp"
            android:fontFamily="@font/alata"

            android:text="Update" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alata"

            android:gravity="center|left"
            android:text="Your Status:"

            android:textSize="22dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/my_cardview"
            android:layout_width="347dp"
            android:layout_height="532dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            app:cardCornerRadius="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/my_cardview1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="#ffce7b"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/my_imageview"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:src="@drawable/weight" />

                <TextView
                    android:id="@+id/userweight"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:fontFamily="@font/alata"


                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alata"

                    android:text="Weight"

                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/my_cardview2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_launcher_foreground"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/my_imageview3"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:src="@drawable/bmi" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:fontFamily="@font/alata"

                    android:text="BMI"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/userbmi"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:fontFamily="@font/alata"

                    android:layout_gravity="bottom"

                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/my_cardview3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#3EB489"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/my_imageview2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:src="@drawable/height" />

                <TextView
                    android:id="@+id/userheight"
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:padding="10dp"

                    android:fontFamily="@font/alata"

                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/alata"

                    android:layout_gravity="center"
                    android:text="Height"

                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/my_cardview4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_launcher_foreground"
                app:cardBackgroundColor="#869fcb"
                app:cardCornerRadius="8dp">

                <!--  Steps tab text
                    <TextView
                    android:id="@+id/userbmi2"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="bottom"

                    android:textSize="18sp" />
-->
                <ImageView
                    android:id="@+id/my_imageview4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:src="@drawable/steps"

                    />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:fontFamily="@font/alata"

                    android:text="Steps"

                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/StepsTaken"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_height="34dp"
                    android:fontFamily="@font/alata"


                    android:textSize="18sp"

                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/my_cardview5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom|center"
                app:cardBackgroundColor="#d68f00"
                app:cardCornerRadius="8dp">

                <!--  Calorie Textview
                <TextView
                    android:id="@+id/userbmi4"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="bottom"

                    android:textSize="18sp" />
                    -->

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:fontFamily="@font/alata"

                    android:text="Calorie: "

                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/my_imageview5"
                    android:layout_width="match_parent"

                    android:layout_height="65dp"
                    android:layout_gravity="left"
                    android:src="@drawable/calorie" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/alata"

            android:gravity="center|left"
            android:text="New Challenges:"

            android:textSize="22dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/my_cardview6"
            android:layout_width="345dp"
            android:layout_height="205dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#FBF0D9"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="144dp"
                android:layout_height="236dp"
                android:layout_gravity="right"
                android:src="@drawable/challenge" />
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/biceps"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_gravity="center|bottom"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/arrow" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="245dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alata"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:text="Biceps Workout"

                android:textSize="18dp" />

            <TextView
                android:id="@+id/start_now_text"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/alata"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="Start now"

                android:textSize="22sp" />

            <!--  <TextView
                  android:id="@+id/textView14"
                  android:layout_width="243dp"
                  android:layout_height="29dp"
                  android:layout_marginTop="35dp"
                  android:layout_gravity="center" />
            -->
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"/>


    </LinearLayout>
</ScrollView>
